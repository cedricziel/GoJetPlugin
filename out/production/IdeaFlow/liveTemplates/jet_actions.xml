<templateSet group="JET">

    <template name="if" value="{{ if $expression$ }}$END${{ end }}" description="New If Condition" toReformat="false"
              toShortenFQNames="false">
        <variable name="expression" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>

    <template name="echo" value="{{ $expression$ }}$END$" description="Echo value" toReformat="false"
              toShortenFQNames="false">
        <variable name="expression" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>


    <template name="yield" value="{{ yield $expression$ }}$END$" description="New yield block" toReformat="false"
              toShortenFQNames="false">
        <variable name="expression" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>

    <template name="include" value="{{ include &quot;$expression$&quot; }}$END$" description="New include block"
              toReformat="false"
              toShortenFQNames="false">
        <variable name="expression" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>

    <template name="extends" value="{{ extends &quot;$expression$&quot; }}$END$" description="New extends"
              toReformat="false"
              toShortenFQNames="false">
        <variable name="expression" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>

    <template name="block" value="{{ block $name$ }}$END${{ end }}" description="New Block"
              toReformat="false"
              toShortenFQNames="false">
        <variable name="name" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>


    <template name="range" value="{{ range $name$ }}$END${{ end }}" description="New Block"
              toReformat="false"
              toShortenFQNames="false">
        <variable name="name" expression="" defaultValue="true" alwaysStopAt="true"/>
        <context>
            <option name="JET" value="true"/>
        </context>
    </template>

</templateSet>

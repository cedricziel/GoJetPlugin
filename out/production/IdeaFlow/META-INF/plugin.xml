<idea-plugin version="2">
    <id>io.github.jhsx.flow</id>
    <name>Flow Framework Support</name>
    <version>1.0</version>
    <vendor url="https://github.com/jhsx"/>
    <category>Custom Languages</category>

    <description><![CDATA[

    ]]></description>

    <change-notes>
        <![CDATA[
    ]]>
    </change-notes>

    <idea-version since-build="143.379"/>
    <depends>com.intellij.modules.lang</depends>


    <module-components>
    </module-components>

    <extensions defaultExtensionNs="com.intellij">

        <!-- FlowRender -->
        <lang.fileViewProviderFactory language="flowRender"
                                      implementationClass="io.github.jhsx.flow.render.file.FlowRenderFileViewProvider Factory"/>
        <lang.parserDefinition language="flowRender"
                               implementationClass="io.github.jhsx.flow.render.FlowRenderParserDefinition"/>
        <editorHighlighterProvider filetype="flowRender"
                                   implementationClass="io.github.jhsx.flow.render.highlighting.FlowRenderEditorHighlighterFactory"/>
        <lang.syntaxHighlighterFactory language="flowRender"
                                       implementationClass="io.github.jhsx.flow.render.highlighting.FlowRenderSyntaxHighlighterFactory"/>
        <fileTypeFactory implementation="io.github.jhsx.flow.render.file.FlowRenderFileTypeFactory"/>
        <!-- /FlowRender -->
        <defaultLiveTemplatesProvider implementation="io.github.jhsx.flow.render.templates.Provider"/>
        <liveTemplateContext implementation="io.github.jhsx.flow.render.templates.Context"/>

        <lang.smartEnterProcessor language="flowRender"
                                  implementationClass="io.github.jhsx.flow.render.lang.FlowEnterHandler"/>

        <lang.braceMatcher language="flowRender" implementationClass="io.github.jhsx.flow.render.lang.BraceMatcher"/>
        <lang.commenter language="flowRender" implementationClass="io.github.jhsx.flow.render.lang.Commenter"/>
    </extensions>

    <actions>
    </actions>

    <application-components>
    </application-components>

</idea-plugin>